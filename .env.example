# ChiroERP Environment Configuration
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Admin Credentials
POSTGRES_USER=chiro_admin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Database Passwords (one per service)
CORE_DB_PASSWORD=CHANGE_ME_CORE_PASSWORD
ANALYTICS_DB_PASSWORD=CHANGE_ME_ANALYTICS_PASSWORD
COMMERCE_DB_PASSWORD=CHANGE_ME_COMMERCE_PASSWORD
CRM_DB_PASSWORD=CHANGE_ME_CRM_PASSWORD
FINANCE_DB_PASSWORD=CHANGE_ME_FINANCE_PASSWORD
LOGISTICS_DB_PASSWORD=CHANGE_ME_LOGISTICS_PASSWORD
OPERATIONS_DB_PASSWORD=CHANGE_ME_OPERATIONS_PASSWORD
SUPPLY_CHAIN_DB_PASSWORD=CHANGE_ME_SUPPLY_CHAIN_PASSWORD

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================

KAFKA_PASSWORD=CHANGE_ME_KAFKA_PASSWORD

# =============================================================================
# KEYCLOAK / OIDC CONFIGURATION
# =============================================================================

# Keycloak Admin
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_KEYCLOAK_ADMIN_PASSWORD

# OIDC Client Secrets (one per service)
CORE_PLATFORM_CLIENT_SECRET=CHANGE_ME_CORE_SECRET
ANALYTICS_CLIENT_SECRET=CHANGE_ME_ANALYTICS_SECRET
COMMERCE_CLIENT_SECRET=CHANGE_ME_COMMERCE_SECRET
CRM_CLIENT_SECRET=CHANGE_ME_CRM_SECRET
FINANCE_CLIENT_SECRET=CHANGE_ME_FINANCE_SECRET
LOGISTICS_CLIENT_SECRET=CHANGE_ME_LOGISTICS_SECRET
OPERATIONS_CLIENT_SECRET=CHANGE_ME_OPERATIONS_SECRET
SUPPLY_CHAIN_CLIENT_SECRET=CHANGE_ME_SUPPLY_CHAIN_SECRET

# =============================================================================
# EMAIL CONFIGURATION (Optional - for production)
# =============================================================================

MAIL_FROM=noreply@chiro-erp.com
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_TLS=REQUIRED

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================

JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =============================================================================
# NOTES
# =============================================================================

# Password Requirements:
# - Minimum 16 characters
# - Mix of uppercase, lowercase, numbers, and symbols
# - Avoid common words or patterns
# - Use a password manager to generate strong passwords

# Secret Rotation:
# - Rotate secrets every 90 days minimum
# - Rotate immediately if compromised
# - Document rotation in change log

# For Production:
# - Use external secrets manager (Vault, AWS Secrets Manager, etc.)
# - Enable secret encryption at rest
# - Implement secret rotation automation
# - Set up access auditing

# Security Best Practices:
# 1. Never commit .env to version control
# 2. Use different secrets for each environment
# 3. Limit secret access to need-to-know basis
# 4. Enable MFA for secret access
# 5. Monitor secret access logs
